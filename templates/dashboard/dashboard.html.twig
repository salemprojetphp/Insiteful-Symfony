{% extends 'base.html.twig' %}
{% block body%}
{{parent()}}
    <link rel="stylesheet" href = {{asset('css/dashboard.css')}}>
    <link rel="stylesheet" href={{asset('css/general.css')}}>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <body>
        <h1>Analytics</h1>
        <section class="settings">
            <select onchange=redirect() id="websiteSelect">
                <option id="websiteSelected" style="display:none">{% if websiteSelected is defined %} {{websiteSelected}} {% else %} Select Website {% endif %}</option>
                {#websites to select#}
                {% for web in websites %}
                    <option><a href='#'>{{web.website}}</a></option>
                {% endfor %}
            </select>
            <script>
                function redirect(){
                    const websiteSelect = document.querySelector("#websiteSelect");
                    const website = websiteSelect.value;
                    window.location = `http://localhost:8000/dashboard/${website}`;
                }
            </script>
            <!-- redirect redirects to a php page with information in GET about the website selected and time selected -->
            <a href="#">
                <img src="data:image/png;base64,"/>
            </a>
            <a href="/dashboard/pdf">
                <img src="data:image/png;base64,"/>
            </a>
        </section>
        <section class="categories">
        <div id="visits">
            <h2>
                {% if numWebsiteVisits is defined %}
                    {{numWebsiteVisits}}
                {% else %}
                    ???
                {% endif %}
            </h2>
            Visits
        </div>
        <div id="search-engines">
            <h2>
                {% if numSearchEngines is defined %}
                    {{numSearchEngines}}
                {% else %}
                    ???
                {% endif %}
            </h2>
            Search engines
        </div>
        <div id="social-networks">
            <h2>
                {% if numSocialMediaVisits is defined %}
                    {{numSocialMediaVisits}}
                {% else %}
                    ???
                {% endif %}
            </h2>
            Social networks
        </div>
        <div id="direct">
            <h2>
                {% if numDirectVisits is defined %}
                    {{numDirectVisits}}
                {% else %}
                    ???
                {% endif %}
            </h2>
            Direct
        </div>
    </section>
    <section class="data-visualisation">
        <div class="chart-container">
            <div class="chart">
                <canvas id="lineChart"></canvas>
            </div>
        </div>
    </section>
        <section class="users-info">
        <div class="users-info-container">
            <div class="sources">
                <div class="source-title">
                    <img src="data:image/png;base64,"/>
                    <h2>Sources</h2>
                </div>

            </div>
            <div class="countries">
                <div class="country-title">
                    <img src="data:image/png;base64,"/>
                    <h2>Countries</h2>
                </div>
            </div>
        </div>
    </section>
    <section class="devices-info">
        <div class="devices-container">
            <div class="devices">
                <img src="data:image/png;base64,"/>
                <h3>Devices</h3>
                <canvas id='devicesDonutChart'></canvas>
            </div>
            <div class="browsers">
                <img src="data:image/png;base64,"/>
                <h3>Browsers</h3>
                <canvas id="browsersDonutChart"></canvas> 
            </div>
        </div>
    </section>
    <script src={{asset('js/dashboard/userCharts.js')}} type="module"></script>
    <script src={{asset('js/dashboard/sourceCountryElements.js')}} type="module"></script>        
{% endblock %}